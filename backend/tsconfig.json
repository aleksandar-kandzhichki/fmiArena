{
    "compilerOptions": {
        "outDir": "build/backend",
        "removeComments": true,
        "preserveConstEnums": true,
        "alwaysStrict": true,
        "sourceMap": true,
        "target": "es2017",
        "moduleResolution": "node",
        "module": "commonjs",
        "lib": [
            "es2017", "es6", "es5", "dom"
        ],
        "baseUrl": ".",
        "paths": {
            "routes/*": [ "routes/*" ],
            "modules/*": [ "modules/*" ],
            "models/*": [ "models/*" ],
        }
    },
    "exclude": [
        "node_modules"
    ]
}